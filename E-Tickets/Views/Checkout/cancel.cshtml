

<div class="container text-center cancel-container my-5">
    <i class="bi bi-x-circle-fill cancel-icon"></i>
    <h1 class="display-4 text-danger mt-3">Payment Canceled</h1>
    <p class="lead">It seems your payment wasn't completed. You can try again or contact support if needed.</p>
    <a href="/Booking/Index" class="btn btn-warning mt-4 me-2 py-2 px-4">Retry Payment</a>
    <a href="/Home/Index" class="btn btn-secondary mt-4 py-2 px-4">Go to Homepage</a>
</div>
@{
    ViewData["Title"] = "Payment Canceled";
}

<style>
    .cancel-container {
        animation: fadeIn 1s ease-in;
    }
    .cancel-icon {
        font-size: 5rem;
        color: #dc3545;
        animation: shake 1s ease-in-out;
    }
    .btn-warning {
        background-color: #ffc107;
        color: white;
        border: none;
        animation: bounceIn 1s ease-in-out;
    }
    .btn-warning:hover {
        background-color: #e0a800;
        box-shadow: 0 0 10px rgba(255, 193, 7, 0.6);
    }
    .btn-secondary:hover {
        background-color: #6c757d;
    }

   
</style>