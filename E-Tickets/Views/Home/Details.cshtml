<div class="container-fluid" style="padding: 0;">
    <div class="row">
        <div class="d-flex gap-2 mt-3">
            <button type="button" class="btn btn-info">Available</button>
        </div>
        <div class="col-12 d-flex align-items-start justify-content-start mt-3">
            <div class="card shadow-lg border-0" style="width: 100%; max-width: 800px; display: flex; flex-direction: row; align-items: flex-start; border-radius: 10px;">
                <img src="~/images/movies/@Model.ImgUrl" class="card-img-left" alt="@Model.Name" style="width: 250px; height: auto; object-fit: cover; border-top-left-radius: 10px; border-bottom-left-radius: 10px;">
                <div class="card-body" style="flex: 1; padding: 20px; background-color: #f9f9f9; border-top-right-radius: 10px; border-bottom-right-radius: 10px;">
                    <h2 class="card-title text-primary" style="font-size: 1.75rem; font-weight: bold;">@Model.Name</h2>
                    <p class="card-text"><strong>Cinema:</strong> @Model.Cinema.Name</p>
                    <p class="card-text"><strong>Category:</strong> @Model.Category.Name</p>
                    <p class="card-text"><strong>Start Date:</strong> @Model.StartDate.ToString("MM/dd/yyyy")</p>
                    <p class="card-text"><strong>End Date:</strong> @Model.EndDate.ToString("MM/dd/yyyy")</p><p class="card-text">
                        <strong>🎟️ Ticket Price:</strong>
                        <span class="text-success fw-bold">$@Model.Price</span>
                    </p>

                    <div class="mt-3">
                        <p class="card-text"><strong>Actors:</strong></p>
                        <ul class="list-unstyled d-flex flex-wrap">
                            @foreach (var actor in Model.Actors)
                            {
                                <li class="me-2 mb-2">
                                    <img src="~/images/cast/@actor.ProfilePicture" style="width: 30px; height: 30px; object-fit: cover; border-radius: 50%;" />
                                    <span>@actor.FirstName @actor.LastName</span>
                                </li>
                            }
                        </ul>
                        <div class="d-flex gap-3 mt-2">
                         
                            <a href="/Home/Index" class="btn btn-success">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .card {
        transition: transform 0.3s;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        }

    .card-img-left {
        border-radius: 10px 0 0 10px; /* Ensure rounded corners on the image */
    }

    .card-body {
        border-radius: 0 10px 10px 0; /* Ensure rounded corners on the card body */
    }

    .list-unstyled {
        padding-left: 0; /* Remove default padding for ul */
    }

</style>