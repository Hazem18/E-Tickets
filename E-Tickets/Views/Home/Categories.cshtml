<div class="container py-5">
    <h2 class="text-center mb-5" style="font-family: 'Cinzel', serif; color: #335C81;">Explore Our Categories</h2>
    <div class="row justify-content-center">
        @foreach (var category in Model)
        {
            <div class="col-md-4 col-lg-3 mb-4">
                <div class="category-card shadow border-0 rounded-lg" style="background-color: #F4F7FB;">
                    <div class="category-card-overlay p-4 d-flex flex-column align-items-center text-dark">
                        <div class="category-icon rounded-circle mb-3 d-flex align-items-center justify-content-center">
                            <span class="icon-text">@category.Name.Substring(0, 1)</span>
                        </div>
                        <h5 class="category-name text-center mb-3" style="font-family: 'Cinzel', serif;">@category.Name</h5>

                        <!-- View Movies Button -->
                        <a href="/Category/AllMovies/@category.Id" class="btn btn-category" data-toggle="tooltip" title="View Movies in this Category">
                            🎥 View Movies
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    /* Header Styling */
    .container h2 {
        font-size: 2.5rem;
        color: #335C81;
        font-family: 'Cinzel', serif;
    }

    /* Category Card Styling */
    .category-card {
        background-color: #F4F7FB; /* Light blue-gray */
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease; /* Transition for smoother effects */
    }

    .category-card:hover {
        transform: scale(1.05); /* Slight scale effect on hover */
        box-shadow: 0 6px 20px rgba(51, 92, 129, 0.3); /* Enhanced shadow */
    }

    .category-card-overlay {
        background: rgba(255, 255, 255, 0.8); /* Soft white overlay */
        border-radius: 15px;
        text-align: center;
    }

    .category-icon {
        width: 70px;
        height: 70px;
        background-color: #335C81; /* Dark navy accent */
        color: #F4F7FB;
        font-size: 2rem;
        font-weight: bold;
    }

    .category-name {
        font-size: 1.5rem;
        color: #335C81;
        text-shadow: 1px 1px 2px #F4F7FB;
    }

    /* View Movies Button */
    .btn-category {
        background-color: #335C81;
        color: #F4F7FB;
        border: 1px solid #335C81;
        border-radius: 50px;
        font-weight: bold;
        padding: 10px 20px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 8px rgba(51, 92, 129, 0.2);
    }

    .btn-category:hover {
        background-color: #4A90E2; /* Softer blue for hover */
        color: #FFFFFF;
        box-shadow: 0 6px 15px rgba(74, 144, 226, 0.3);
    }

    /* Add tooltip styles */
    .tooltip-inner {
        background-color: #335C81; /* Dark navy for tooltip */
        color: #F4F7FB; /* Light text */
    }
</style>

<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip(); // Initialize tooltips
    });
</script>
