@model E_Tickets.ViewModel.LoginVM

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg border-0" style="background-color: #ffffff; border-radius: 15px;">
            <div class="card-body p-5">
                <h2 class="text-center mb-4" style="color: #ff9800; font-weight: bold;">Welcome Back to the Magic of Cinema</h2>
                <p class="text-center text-dark mb-5" style="font-size: 1.1rem;">"Your story continues."</p>
                <form asp-action="Login" id="loginForm">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                    <!-- User -->
                    <div class="form-group mb-4">
                        <label asp-for="User" class="text-dark" style="font-size: 1.1rem;">Username</label>
                        <input asp-for="User" class="form-control form-control-lg input-custom" />
                        <span asp-validation-for="User" class="text-danger"></span>
                    </div>

                    <!-- Password -->
                    <div class="form-group mb-4">
                        <label asp-for="Password" class="text-dark" style="font-size: 1.1rem;">Password</label>
                        <input asp-for="Password" class="form-control form-control-lg input-custom" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- Remember Me -->
                    <div class="form-group form-check mb-4">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                        </label>
                    </div>

                    <!-- Submit Button -->
                    <div class="d-flex justify-content-center">
                        <input type="submit" value="Login" class="btn btn-warning btn-lg px-5 py-2" style="font-size: 1.2rem; border-radius: 10px;" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" asp-controller="Home" class="text-warning" style="font-size: 1.2rem;">Back to Home</a>
</div>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}

<style>
    body {
        background-color: #f5f5f5; /* Lighter background */
        color: #333;
        font-family: 'Roboto', sans-serif;
    }

    .card {
        background-color: #ffffff;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .input-custom {
        background-color: #e9ecef; /* Lighter input background */
        color: #333;
        border: 1px solid #ced4da;
        border-radius: 10px;
        padding: 0.75rem 1rem;
        transition: all 0.3s ease;
    }

    .input-custom:focus {
        background-color: #f8f9fa;
        border-color: #ff9800;
        box-shadow: 0 0 8px rgba(255, 152, 0, 0.5);
        outline: none;
    }

    .btn-warning {
        background-color: #ff9800;
        border: none;
    }

    .btn-warning:hover {
        background-color: #ffb347;
        transform: scale(1.05);
    }

    .text-light {
        color: #eeeeee !important;
    }
</style>
