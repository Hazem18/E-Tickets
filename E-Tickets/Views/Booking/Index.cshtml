@model List<Booking>

<form method="post">
    <br />
    <div class="card shadow border-0">
        <div class="card-header bg-secondary bg-gradient text-light ml-0 py-4">
            <div class="row px-4">
                <div class="col-6">
                    <h5 class="pt-2 text-white">
                        Your Bookings
                    </h5>
                </div>
            </div>
        </div>
        <div class="card-body my-4">
            <div class="row mb-3 pb-3">
                <div class="col-md-2 offset-md-1">
                    <a href="/Home/Index" class="btn btn-outline-primary text-uppercase mb-5 btn-sm"><small>Continue Browsing</small></a>
                </div>
                <div class="col-md-10 offset-md-1">
                    @if (Model == null || !Model.Any())
                    {
                        <div class="text-center">
                            <p>No bookings found.</p>
                        </div>
                    }
                    else
                    {
                        foreach (var booking in Model)
                        {
                            <div class="row border-bottom pb-3">
                                <div class="d-none d-lg-block col-lg-1 text-center py-2">
                                    <img src="~/images/movies/@booking.Movie.ImgUrl" class="rounded" width="100%" />
                                </div>
                                <div class="col-12 col-lg-6 pt-md-3">
                                    <h5 class="text-uppercase text-secondary">
                                        <strong>@booking.Movie.Name</strong>
                                    </h5>
                                    <p>Cinenma:<Strong>@booking.Movie.Cinema.Name</Strong><br>
                                    Category:<Strong>@booking.Movie.Category.Name</Strong></p>
                                </div>
                                <div class="col-12 col-lg-5 text-center row align-items-center">
                                    <div class="col-4 text-md-right pt-2 pt-md-4">
                                        <h6 class="fw-semibold">
                                            Tickets: @booking.NumberOfTickets
                                            <span class="text-muted">&nbsp; x &nbsp;</span>@booking.Movie.Price.ToString("c")
                                        </h6>
                                    </div>
                                    <div class="col-6 pt-2">
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-outline-primary mx-1" onclick="location.href='/Booking/Increment?MovieId=@booking.MovieId'">
                                                <i class="bi bi-plus-circle"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-danger mx-1" onclick="location.href='/Booking/Decrement?MovieId=@booking.MovieId'">
                                                <i class="bi bi-dash-circle"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="col-2 offset-lg-1 text-right pt-2">
                                        <button type="button" class="btn btn-danger bg-gradient" onclick="location.href='/Booking/Delete?MovieId=@booking.MovieId'">
                                            <i class="bi bi-trash-fill"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
            <div class="card-footer border-0">
                <div class="row">
                    <div class="col-md-4 offset-md-4">
                        <ul class="list-group mb-4">
                            <li class="d-flex justify-content-between align-items-center">
                                <h5 class="text-dark fw-semibold text-uppercase">Total Cost (EGP)</h5>
                                <h4 class="text-dark fw-bolder">@ViewBag.Cost.ToString("c")</h4>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 offset-md-5">
                        <a href="/Booking/Pay" class="btn btn-primary border-0 bg-gradient w-100 py-2">Proceed to Payment</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<style>
    .btn {
        transition: background-color 0.3s, transform 0.2s;
    }

        .btn:hover {
            background-color: #0056b3; /* Change as per your color scheme */
            transform: scale(1.05);
        }

</style>