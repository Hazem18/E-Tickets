@model Cinema
<div class="container mt-5">
    <div class="card shadow-lg border-0" style="max-width: 700px; margin: 0 auto; border-radius: 20px;">
        <div class="card-header text-center" style="background: linear-gradient(to right, #ff7e5f, #feb47b); color: white; padding: 1.5rem; border-top-left-radius: 20px; border-top-right-radius: 20px;">
            <h2 class="mb-0" style="font-size: 2rem; font-weight: 600;">Add Cinema</h2>
        </div>
        <div class="card-body" style="background-color: #f2f7fa; padding: 2rem;">
            <form action="/Cinema/Create" method="post" id="cinemaForm">
                <div class="form-group mb-4">
                    <label for="cinemaName" class="form-label" style="font-size: 1.25rem; font-weight: 500;">Cinema Name</label>
                    <input type="text" id="cinemaName" name="Name" class="form-control form-control-lg" placeholder="Enter cinema name" required style="border-radius: 10px; padding: 1rem; font-size: 1.15rem; border: 1px solid #ced4da;" />
                    <span asp-validation-for="Name" class="text-warning"></span>
                </div>
                <div class="form-group mb-4">
                    <label for="cinemaDescription" class="form-label" style="font-size: 1.25rem; font-weight: 500;">Description</label>
                    <textarea id="cinemaDescription" name="Description" class="form-control form-control-lg" placeholder="Enter description" required style="border-radius: 10px; padding: 1rem; font-size: 1.15rem; border: 1px solid #ced4da;" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-warning"></span>
                </div>
                <div class="form-group mb-4">
                    <label for="cinemaAddress" class="form-label" style="font-size: 1.25rem; font-weight: 500;">Address</label>
                    <input type="text" id="cinemaAddress" name="Address" class="form-control form-control-lg" placeholder="Enter cinema address" required style="border-radius: 10px; padding: 1rem; font-size: 1.15rem; border: 1px solid #ced4da;" />
                    <span asp-validation-for="Address" class="text-warning"></span>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary btn-lg" style="padding: 0.75rem 1.5rem; border-radius: 12px; font-size: 1.2rem; background-color: #ff7e5f; border: none; transition: background-color 0.3s;">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml"></partial>
}
<script>
    document.getElementById('cinemaForm').addEventListener('submit', function (event) {
        const cinemaName = document.getElementById('cinemaName').value.trim();
        const cinemaDescription = document.getElementById('cinemaDescription').value.trim();
        const cinemaAddress = document.getElementById('cinemaAddress').value.trim();

        if (cinemaName && cinemaDescription && cinemaAddress) {
            alert('Cinema added successfully!');
            // this.submit(); // Do not call this here to prevent empty submission
        } else {
            alert('Please fill out all fields.');
            event.preventDefault(); // Prevent submission if input is invalid
        }
    });
</script>

<style>
    .container {
        max-width: 700px;
        margin: 0 auto;
    }

    .card {
        background-color: #ffffff;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .form-control {
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        border: none;
        transition: box-shadow 0.3s;
    }

    .form-control:focus {
        box-shadow: 0 0 15px rgba(255, 126, 95, 0.4);
        outline: none;
    }

    .btn-primary:hover {
        background-color: #ff5a3c;
    }

    body {
        background: #eef2f7; /* Light, restful background */
        font-family: 'Roboto', sans-serif;
    }

    .card-header {
        font-family: 'Roboto', sans-serif;
        letter-spacing: 1px;
    }

    .btn-primary {
        background-color: #ff7e5f;
        border: none;
        transition: transform 0.2s;
    }

    .btn-primary:hover {
        transform: scale(1.05);
    }
</style>
