@{
    ViewData["Title"] = "Payment Successful";
}

<div class="container text-center success-container my-5">
    <div class="confetti"></div>
    <i class="bi bi-check-circle-fill checkmark-icon"></i>
    <h1 class="display-4 text-success mt-3">Payment Successful!</h1>
    <p class="lead">Thank you for your purchase! Your transaction was completed successfully.</p>
    <a href="/Home/Index" class="btn btn-primary mt-4 py-2 px-4">Go to Homepage</a>
</div>


<style>
    .success-container {
        animation: fadeIn 1s ease-in;
        position: relative;
    }
    .checkmark-icon {
        font-size: 5rem;
        color: #28a745;
        animation: bounceIn 1s ease-in-out;
    }
    .confetti {
        position: absolute;
        width: 100%;
        height: 100%;
        pointer-events: none;
        animation: fall 3s ease-in-out infinite;
    }
    .btn-primary {
        background-color: #28a745;
        color: white;
        border: none;
        box-shadow: 0 0 10px rgba(0, 128, 0, 0.5);
    }
    .btn-primary:hover {
        background-color: #218838;
        box-shadow: 0 0 20px rgba(0, 128, 0, 0.7);
    }

  
   
</style>